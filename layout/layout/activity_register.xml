<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/White"><EditText
    android:layout_width="275dp"
    android:layout_height="40dp"
    android:id="@+id/edit_username_reg"
    android:layout_marginTop="100dp"
    android:background="#bbcac7"
    android:paddingLeft="2dp"
    android:drawableLeft="@drawable/username"
    android:hint="@string/username"/><EditText
    android:layout_width="275dp"
    android:layout_height="40dp"
    android:id="@+id/edit_mail_reg"
    android:layout_marginTop="20dp"
    android:background="#bbcac7"
    android:paddingLeft="2dp"
    android:drawableLeft="@drawable/username"
    android:hint="@string/mailid"/><EditText
    android:layout_width="275dp"
    android:layout_height="40dp"
    android:inputType="textPassword"
    android:id="@+id/edit_password_reg"
    android:layout_marginTop="20dp"
    android:drawableLeft="@drawable/password"
    android:background="#bbcac7"
    android:hint="@string/password"/><EditText
    android:layout_width="275dp"
    android:layout_height="40dp"
    android:inputType="textPassword"
    android:id="@+id/edit_cmf_password_reg"
    android:layout_marginTop="20dp"
    android:drawableLeft="@drawable/password"
    android:background="#bbcac7"
    android:hint="@string/cmf_password"/><RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
    android:id="@+id/radio_faculty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Faculty"/><RadioButton
    android:id="@+id/radio_student"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Student"/></RadioGroup>
    <Button
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:id="@+id/register_button"
    android:layout_marginTop="20dp"
    android:background="#bbcac7"
    android:text="@string/button_register"
     android:enabled="false"/><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"><TextView
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:text="@string/already_reg" /><TextView
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:id="@+id/textview_login"
    android:paddingLeft="10dp"
    android:text="@string/lodin_reg"
    android:textStyle="bold" /></LinearLayout>
</LinearLayout>