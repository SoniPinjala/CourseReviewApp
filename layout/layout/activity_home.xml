<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/White"><EditText
    android:layout_width="190dp"
    android:layout_height="40dp"
    android:id="@+id/edit_username"
    android:layout_marginTop="160dp"
    android:background="#bbcac7"
    android:paddingLeft="2dp"
    android:drawableLeft="@drawable/username"
    android:hint="@string/username"/><EditText
    android:layout_width="190dp"
    android:layout_height="40dp"
    android:inputType="textPassword"
    android:id="@+id/edit_password"
    android:layout_marginTop="20dp"
    android:drawableLeft="@drawable/password"
    android:background="#bbcac7"
    android:hint="@string/password"/><Button
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:id="@+id/login_button"
    android:layout_marginTop="20dp"
    android:background="#bbcac7"
    android:text="@string/login"
    android:enabled="false"/><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"><TextView
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:text="@string/not_registered" /><TextView
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:id="@+id/textview_register"
    android:paddingLeft="10dp"
    android:text="@string/register"
    android:textStyle="bold" /></LinearLayout>
</LinearLayout>